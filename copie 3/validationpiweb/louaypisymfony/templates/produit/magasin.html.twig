{% extends 'front.html.twig' %}

									{% block content  %}
								
									<!DOCTYPE html>
<html>
<head>
	<title>Ma vitrine</title>
	<style>
   .card {
  width: 300px;
  height: 200px;
  perspective: 1000px;
  margin: 20px;
  display: inline-block;
}

.card__inner {
  width: 100%;
  height: 100%;
  position: relative;
  transition: transform 0.8s;
  transform-style: preserve-3d;
}

.card:hover .card__inner {
  transform: rotateY(180deg);
}

.card__front,
.card__back {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  backface-visibility: hidden;
}

.card__back {
  transform: rotateY(180deg);
  background-color: #f7f7f7;
  padding: 20px;
  box-sizing: border-box;
}

.card__back h2,
.card__back p {
  margin: 0;
}

.btn {
  display: block;
  margin-top: 20px;
  padding: 10px;
  background-color: #007bff;
  color: #fff;
  text-align: center;
  text-decoration: none;
  transition: background-color 0.3s;
}

.btn:hover {
  background-color: #0069d9;
}

.card__front img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

  </style>

<div class="row text-center">
	{% for produit in produit %}
	  <div class="card">
		<div class="card__inner">
		  <div class="card__front">
			<img src="{{ asset('uploads/' ~ produit.image) }}" >
		  </div>
		  <div class="card__back">
			<h2>Title 1</h2>
			<p>{{ produit.nom }} {{ produit.description }}</p>
			<a href="{{path('details')}}" class="btn">Read more</a>
		  </div>
		</div>
	  </div>
	{% endfor %}
  </div>
  
									{% endblock %}
									
								
  
	